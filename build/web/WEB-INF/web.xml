<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>downloadBinary</servlet-name>
        <servlet-class>Logic.service.downloadBinary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadAttachment</servlet-name>
        <servlet-class>Logic.service.downloadAttachment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>Logic.service.FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloadBinary</servlet-name>
        <url-pattern>/downloadBinary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadAttachment</servlet-name>
        <url-pattern>/downloadAttachment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/FileServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
